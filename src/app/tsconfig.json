{
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["dom", "ES2020"],
        "rootDir": "./",
        "baseUrl": ".",
        "resolveJsonModule": true,

        "target": "es2021",
        "module": "commonjs",
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "noEmit": true
    }
}
